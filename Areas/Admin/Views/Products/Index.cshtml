@model IEnumerable<JavaFloral.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <section class="card">
            <header class="card-header">
                <div class="row">
                    <div class="col-11"> List Products</div>
                    <div class="col-1">
                        <a asp-action="Create"><button class="btn btn-primary"><i class="fa fa-plus"></i></button></a>
                    </div>
                </div>



            </header>
            <div class="container">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width:50px;">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductImage)
                            </th>
                        
                            <th>
                                @Html.DisplayNameFor(model => model.Color)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Qty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Smell)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <img src="~/images/@item.ProductImage" style="width: 60px; height: 60px" alt="ProductImage" />
                            </td>
                       
                            <td>
                                @Html.DisplayFor(modelItem => item.Color)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount) %
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Smell)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            <td>
                                <a class="btn btn-danger  btn-xs" asp-area="admin" asp-controller="products" asp-action="Delete" asp-route-id="@item.ProductID" data-original-title="Click to delete" title="">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a class="btn btn-success btn-xs" asp-area="admin" asp-controller="products" asp-action="Edit" asp-route-id="@item.ProductID" data-original-title="Click to edit" title="">

                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-warning btn-xs" asp-area="admin" asp-controller="products" asp-action="Details" asp-route-id="@item.ProductID" data-original-title="Detail" title="">
                                    <i class="fa fa-info"></i>


                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </section>
    </div>

</div>
