@model IEnumerable<JavaFloral.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <section class="card">
            <header class="card-header">
                <div class="row">
                    <div class="col-11"> List Categories </div>
                    <div class="col-1">
                        <a asp-action="Create"><button class="btn btn-primary"><i class="fa fa-plus"></i></button></a>
                    </div>
                </div>



            </header>
            <div class="container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @if (item.Status == 1)
                                {

                                <span class="badge badge-success label-mini">Active</span>

                                }
                                else
                                {
                                <span class="badge badge-danger label-mini">Pending</span>
                                }

                            </td>




                            <td>
                                <a class="btn btn-danger  btn-xs" asp-area="admin" asp-controller="categories" asp-action="Delete" asp-route-id="@item.Categoryid" data-original-title="Click to delete" title="">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a class="btn btn-success btn-xs" asp-area="admin" asp-controller="categories" asp-action="Edit" asp-route-id="@item.Categoryid" data-original-title="Click to edit" title="">

                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-warning btn-xs" asp-area="admin" asp-controller="categories" asp-action="Details" asp-route-id="@item.Categoryid" data-original-title="Detail" title="">
                                    <i class="fa fa-info"></i>


                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </section>
    </div>

</div>
