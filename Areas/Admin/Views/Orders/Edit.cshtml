@model JavaFloral.Models.Orders

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <section class="card">
            <header class="card-header">
                <div class="row">
                    <div class="col-11"> Edit order</div>
                    <div class="col-1">
                        <a asp-area="admin" asp-action="Index"><button class="btn btn-danger"><i class="fa fa-arrow-left"></i></button></a>
                    </div>
                </div>



            </header>
            <div class="container">



                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        <div class="form-group">

                            <input type="hidden" asp-for="OrderName" class="form-control" />
                            <span asp-validation-for="OrderName" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="hidden" asp-for="telephone" class="form-control" />
                            <span asp-validation-for="telephone" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="hidden" asp-for="address" class="form-control" />
                            <span asp-validation-for="address" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="hidden" asp-for="message" class="form-control" />
                            <span asp-validation-for="message" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="hidden" asp-for="paymenttype" class="form-control" />
                            <span asp-validation-for="paymenttype" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="CreateAt" class="form-control" />
                            <span asp-validation-for="CreateAt" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="hidden" asp-for="UpdateAt" value="@DateTime.Now" class="form-control" />
                            <span asp-validation-for="UpdateAt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>

                            <select asp-for="Status" class="form-control">
                                <option value="1">Payment Successfull</option>
                                <option value="2">Order Cancel</option>


                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="GrandTotal" class="form-control" />
                            <span asp-validation-for="GrandTotal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="UserID" class="form-control" />
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-danger" />
                        </div>
                    </form>
                </div>



            </div>


        </section>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
