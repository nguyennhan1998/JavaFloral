    @*model IEnumerable<IdentityRole>*@
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }

    <div class="row">
        <div class="col-sm-12">
            <section class="card">
                <header class="card-header">
                    <div class="row">
                        <div class="col-11"> List Roles </div>
                        <div class="col-1">
                            <a asp-area="admin" asp-action="Create"><button class="btn btn-primary"><i class="fa fa-plus"></i></button></a>
                        </div>
                    </div>



                </header>
                <div class="container">
                    <table class="table table-sm table-bordered table-bordered">
                        <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td i-role="@role.Id"></td>
                                <td><a class="btn btn-sm btn-primary" asp-area="admin" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                                <td>
                                    <form asp-action="Delete" asp-area="admin" asp-route-id="@role.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>

                </div>

            </section>
        </div>

    </div>
