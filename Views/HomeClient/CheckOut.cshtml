@model JavaFloral.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active"> Checkout </li>
            </ul>
        </div>
    </div>
</div>
<!-- checkout-area start -->
<div class="checkout-area pb-45 pt-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="checkout-wrapper">
                    <div id="faq" class="panel-group">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h5 class="panel-title"><span>1.</span> <a data-toggle="collapse" data-parent="#faq" href="#payment-2">Order Information</a></h5>
                            </div>
                            <div id="payment-2" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="billing-information-wrapper">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6">
                                                <div class="billing-info">
                                                    <label>First Name</label>
                                                    <input type="text" value="@Model.Users.UserName">
                                                </div>
                                            </div>


                                            <div class="col-lg-6 col-md-6">
                                                <div class="billing-info">
                                                    <label>Email Address</label>
                                                    <input type="email" value="@Model.Users.Email">
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="billing-info">
                                                    <label>Address</label>
                                                    <input type="text">
                                                </div>
                                            </div>


                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h5 class="panel-title"><span>2.</span> <a data-toggle="collapse" data-parent="#faq" href="#payment-6">Order Detail</a></h5>
                            </div>
                            <div id="payment-6" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="order-review-wrapper">
                                        <div class="order-review">


                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Product Image</th>
                                                        <th>Product Name</th>
                                                        <th>Price</th>
                                                        <th>Qty</th>
                                                        <th>Total Money</th>

                                                    </tr>

                                                </thead>
                                                <tbody>
                                                    @if (Model.Carts.Count > 0)
                                                    {
                                                        decimal grandTotal = 0;
                                                        @foreach (var item in Model.Carts)
                                                        {

                                                            var total = item.product.Price * item.quantity;
                                                            grandTotal += total;


                                                            <tr class="text-center">
                                                                <td class="product-thumbnail">
                                                                    <a href="#"><img src="~/images/@item.product.ProductImage" width="60px" height="60px" alt=""></a>
                                                                </td>
                                                                <td class="product-name"><a href="#">@item.product.Name</a></td>
                                                                <td class="product-price-cart"><span class="amount">$@item.product.Price</span></td>
                                                                <td class="product-quantity">
                                                                    @item.quantity
                                                                </td>
                                                                <td class="product-subtotal">@total</td>

                                                            </tr>
                                                        }


                                                        <h4 class="grand-totall-title">Grand Total:  <span>$@grandTotal</span></h4>



                                                    }
                                                    else
                                                    {
                                                        <p>Empty product</p>

                                                    }

                                                </tbody>
                                            </table>



                                            <div class="billing-back-btn">
                                                <span>
                                                    Forgot an Item?
                                                    <a asp-action="CartPage" asp-controller="HomeClient"> Edit Your Cart.</a>

                                                </span>
                                                <div class="billing-btn">

                                                    <a onclick="checkout()" class="btn btn-danger">Pay Now</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="checkout-progress">
                    <h4>Checkout Progress</h4>
                    <ul>

                        <li>Order Information</li>
                        <li>Order Details</li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function checkout() {

        $.ajax({
            type: 'POST',
            dataType: 'JSON',
            url: '@Url.Action("SaveOrder")',
            data: { },
            success:
            function (response) {
            if (response.status == "true") {
                alert("Payment Successfully")
                window.location.href = '@Url.Action("Index")';
            }

            },
            error:
            function (response) {

            }

            });

    }
</script>

