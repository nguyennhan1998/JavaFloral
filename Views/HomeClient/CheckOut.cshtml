<script>
    var cart = [];
    var total = 0;
    $(document).ready(function () {

        var model = JSON.parse('@Html.Raw(Json.Serialize(Model))');
        console.log(model);
        var cartmodel = model.carts;
        cartmodel.forEach(item => {

            total += item.quantity * item.product.price;
            cart.push(({ name: item.product.name, unit_amount: { currency_code: "USD", value: item.product.price }, quantity: item.quantity }));
        });
        console.log(cart);
 
    });
    
    paypal.Buttons({

        // Set up the transaction
        createOrder: function (data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: {
                        currency_code: "USD",
                        value: total,
                        breakdown: {
                            item_total: {
                                currency_code: "USD",
                                value: total,
                            }
                        }
                    },
                    items: cart
                }]
            });
        },

        // Finalize the transaction
        onApprove: function (data, actions) {
            return actions.order.capture().then(function (details) {
                $("#paypalstatus").val("success");
                // Show a success message to the buyer
                return checkout();

            });
     
        }


    }).render('#paypal-button-container');
</script>


