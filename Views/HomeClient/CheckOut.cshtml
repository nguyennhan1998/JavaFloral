<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>
<script type="text/javascript">
    function checkout() {
        var address = $('#billinginfo input[name=address]').val();
        var message = $('#billinginfo textarea[name=message]').val();
        var emailto = $('#billinginfo input[name=emailto]').val();
        var telephone = $('#billinginfo input[name=telephone]').val();
        var paymenttype = $('#payment-5 input[name=paymenttype]:checked').val();
        var receiveddate = $('#billinginfo input[name=receiveddate]').val();
        var name = $('#billinginfo input[name=name]').val();
        
        $.ajax({
            type: 'POST',
            dataType: 'JSON',
            url: '@Url.Action("SaveOrder")',
            data: {
                address: address,
                message: message,
                paymenttype: parseInt(paymenttype),
                telephone: telephone,
                emailto: emailto,
                name: name,
                receiveddate: receiveddate,
            },
            success:
            function (response) {
            if (response.status == "true") {
                alert("Payment Successfully")
                window.location.href = '@Url.Action("Index")';
            }

            },
            error:
            function (response) {

            }

            });

    }
</script>

