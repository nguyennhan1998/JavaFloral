@model IEnumerable<JavaFloral.Models.Blog>
    @{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="breadcrumb-area gray-bg">
        <div class="container">
            <div class="breadcrumb-content">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"> Blog Left Sidebar </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- blog-area start -->
    <div class="blog-area ptb-75">
        <div class="container">
            <div class="row flex-row-reverse">
                <div class="col-lg-8 col-xl-9 col-md-8">
                    <div class="blog-wrapper">
                        @foreach (var item in Model)
                        {
                            <div class="single-blog-wrapper mb-40">
                                <div class="blog-img mb-30">
                                    <a asp-action="BlogDetails" asp-controller="HomeClient" asp-route-id="@item.BlogID">
                                        <img src="~/images/@item.BlogImage" alt="">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h2><a asp-action="BlogDetails" asp-controller="HomeClient" asp-route-id="@item.BlogID">@item.Title</a></h2>
                                    <div class="blog-date-categori">
                                        <ul>
                                            <li>@DateTime.Now</li>
                                            <li><a href="#">Admin </a></li>
                                        </ul>
                                    </div>
                                </div>
                                <p>@item.Description</p>
                                <div class="blog-btn-social mt-30">
                                    <div class="blog-btn">
                                        <a asp-action="BlogDetails" asp-controller="HomeClient" asp-route-id="@item.BlogID">Read more</a>
                                    </div>
                                    <div class="blog-social">
                                        <span>share :</span>
                                        <ul>
                                            <li><a href="#"><i class="ion-social-instagram"></i></a></li>
                                            <li><a href="#"><i class="ion-social-skype"></i></a></li>
                                            <li><a href="#"><i class="ion-social-twitter"></i></a></li>
                                            <li><a href="#"><i class="ion-social-facebook"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="pagination-total-pages mt-50">
                            <div class="pagination-style">
                                <ul>
                                    <li><a class="prev-next prev" href="#"><i class="ion-ios-arrow-left"></i> Prev</a></li>
                                    <li><a class="active" href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">...</a></li>
                                    <li><a href="#">10</a></li>
                                    <li><a class="prev-next next" href="#">Next<i class="ion-ios-arrow-right"></i> </a></li>
                                </ul>
                            </div>
                            <div class="total-pages">
                                <p>Showing 1 - 20 of 30 results  </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-xl-3 col-md-4">
                    <div class="blog-sidebar-wrapper sidebar-mrg">
                        <div class="blog-widget mb-50">
                            <div class="blog-search">
                                <form class="news-form">
                                    <input type="text" placeholder="Search.....">
                                    <button type="submit">
                                        <i class="ion-search"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="blog-widget mb-40">
                            <div class="blog-author">
                                <a href="#"><img src="~/ClientFile/assets/img/blog/vanhlu2.jpg" alt=""></a>
                                <h4><a href="#">nguyen vanh</a></h4>
                                <span>Head of blogger, blogger</span>
                            </div>
                        </div>
                        <div class="blog-widget mb-45">
                            <h4 class="blog-widget-title mb-25">Recent post</h4>
                            <div class="blog-recent-post">
                                @foreach (var item in Model)
                                {
                                    <div class="recent-post-wrapper mb-25">
                                        <div class="recent-post-img">
                                            <a asp-action="BlogDetails" asp-controller="HomeClient" asp-route-id="@item.BlogID"> <img src="~/images/@item.BlogImage" alt=""></a>
</div>
                                        <div class="recent-post-content">
                                            <h4><a asp-action="BlogDetails" asp-controller="HomeClient" asp-route-id="@item.BlogID">@item.Title</a></h4>
                                            <span>@DateTime.Now</span>
                                        </div>
                                    </div>
                                    }
                                </div>
                        </div>
                        
                        <div class="blog-widget mb-35">
                            <h4 class="blog-widget-title mb-30">instagram</h4>
                            <div class="blog-instagram">
                                <ul>
                                    <li><a href="#"><img src="~/ClientFile/assets/img/instagram/instagram1.jpg" alt=""></a></li>
                                    <li><a href="#"><img src="~/ClientFile/assets/img/instagram/instagram2.jpg" alt=""></a></li>
                                    <li><a href="#"><img src="~/ClientFile/assets/img/instagram/instagram3.jpg" alt=""></a></li>
                                    <li><a href="#"><img src="~/ClientFile/assets/img/instagram/instagram4.jpg" alt=""></a></li>
                                    <li><a href="#"><img src="~/ClientFile/assets/img/instagram/instagram5.jpg" alt=""></a></li>
                                    <li><a href="#"><img src="~/ClientFile/assets/img/instagram/instagram6.jpg" alt=""></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="blog-widget mb-35">
                            <h4 class="blog-widget-title mb-20">follow us </h4>
                            <div class="blog-sidebar-social">
                                <ul>
                                    <li><a href="#"><i class="ion-social-instagram"></i></a></li>
                                    <li><a href="#"><i class="ion-social-skype"></i></a></li>
                                    <li><a href="#"><i class="ion-social-twitter"></i></a></li>
                                    <li><a href="#"><i class="ion-social-facebook"></i></a></li>
                                </ul>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>

